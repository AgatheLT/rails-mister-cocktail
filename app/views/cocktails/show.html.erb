<h1>Your cocktail: <%= @cocktail.name %> </h1>

<div>
<h3>Recipe</h3>
  <table class="table">
    <tbody>
      <thead>
        <th>Ingredient</th>
        <th>Description</th>
        <th>Delete Recepie</th>
      </thead>
      <% @cocktail.doses.each do |dose| %>
        <tr>
          <td><%= dose.ingredient.name %></td>
          <td><%= dose.description %></td>
          <td>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash destroy_dose"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Create a new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-outline-success" %>
<%= link_to "Go back to the list of cocktails", cocktails_path, class: "btn btn-outline-success" %>







